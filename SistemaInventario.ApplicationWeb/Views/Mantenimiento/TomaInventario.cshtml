@{
    ViewData["Title"] = "Toma Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos {

    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet">


}
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Toma de Inventario</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-3">
                <button id="btnDescargarExcel" class="btn btn-success"><i class="fas fa-plus-circle"></i> Descargar Excel</button>
            </div>
        </div>
        <hr />
        <div class="search-section">
            <h6>Actual</h6>
            <select id="cboBuscarProducto" class="form-control col-sm-12">
                <option value=""></option>
            </select>

            <table class="table table-bordered mt-3 tbProducto">
                <thead>
                    <tr>
                        <th class="col-1 sorting">ID Producto</th>
                        <th class="col-3 sorting">Código de Barra</th>
                        <th class="col-3 sorting">Nombre</th>
                        <th class="col-2 sorting">Stock Actual</th>
                        <th class="col-2 sorting">Stock</th>
                        <th class="col-1 sorting">Accion</th>
                    </tr>
                </thead>
                <tbody id="detalle1">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Detalle</h6>
    </div>
    <div class="card-body">
        <form id="formModificarStock">
            <div class="form-group">
                <label for="txtRazon">Razón de la Modificación:</label>
                <textarea id="txtRazon" class="form-control" rows="3" required></textarea>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="DocumentoPersonaDesignada">Documento</label>
                    <select class="form-control form-control-sm" id="DocumentoPersonaDesignada">
                        <option>DNI</option>
                        <option>Carnet de Extranjeria</option>
                    </select>
                </div>
                <div class="form-group col-sm-6">
                    <label for="NumeroDocumentoPersonaDesignada">Numero de Documento</label>
                    <input type="text" class="form-control form-control-sm" name="NumeroDocumentoPersonaDesignada" id="NumeroDocumentoPersonaDesignada" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="PersonaDesignada">Persona Designada</label>
                    <input type="text" class="form-control form-control-sm" name="PersonaDesignada" id="PersonaDesignada" />
                </div>
                <div class="form-group col-sm-6">
                    <label for="FechaRealizada">Fecha Realizada</label>
                    <input class="form-control form-control-sm" type="date" name="FechaRealizada" id="FechaRealizada" />
                </div>
            </div>
        <hr />
            <button type="submit" class="btn btn-primary" id="btnMantenimiento">Guardar Cambios</button>
        </form>
    </div>
</div>

<script>
    document.getElementById('btnDescargarExcel').addEventListener('click', function () {
        // Hacer una solicitud GET para descargar el Excel
        window.location.href = '/Producto/TomaInventarioExcel';
    });
</script>
@section Scripts{
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/select2/es.min.js"></script>
    <script src="~/js/vistas/Toma.js"></script>
}